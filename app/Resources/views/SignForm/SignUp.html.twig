                        <div style="color:red" ng-show="form_provider.$submitted || form_provider.uTel_provider.$touched">
                            <span ng-show="form_provider.uTel_provider.$error.required">*You must enter your Phone number</span>
                            <span class="error" ng-show="form_provider.uTel_provider.$error.minlength">*Phone number too short</span>
                            {#<span style="color:red;" ng-show="form.uTel.$error.valid && form.$submitted">Invalid phone number</span>#}
