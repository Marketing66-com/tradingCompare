                                <button  class="form-btn_codever" [disabled]="form_provider.invalid" type="submit" ng-click="save_provider(user,form_provider)">
                                    <span data-ng-hide="loading"> SUBMIT  </span>
                                    <span data-ng-show="loading"> Checking <i class="fa fa-spinner fa-spin"></i> </span>
