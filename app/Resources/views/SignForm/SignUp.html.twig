                    <a class="form_soz-cont_icon footer_soz_icon_faceebook" type="submit" ng-click="SignInProvider('facebook')"><i class="fab fa-facebook-f"></i></a>
                </div>
            </div>

                {#// 5#}
            <div ng-switch-when="5" class="modal_right-content">
                <h1 style="font-size: 29px;" class="sign_form_title">Last step to complete registration</h1>
                <h2 class="sign_form_subtitle">Please choose a Nickname and enter you phone number</h2>
                <form name="form_provider" style="border: none" class="css-form form-card" novalidate>

                        {#*** NICK-NAME#}
                    <div class="form-element form-input">
                        <input  class="form-element-input" placeholder=" " autocomplete="off" ng-model="user.nickname" type="text" name="uNickname_provider" required=""/>
                        <div class="form-element-bar"></div>
                        <label class="form-element-label" >NICKNAME</label>
                    </div>
                        {#*** SHOW NICKNAME#}
                        <div style="color:red" ng-show="form_provider.$submitted || form_provider.uNickname_provider.$touched">
                            <div ng-show="form_provider.uNickname_provider.$error.required">*Please choose a nickname</div>
                        </div>
                        <div style="color:red" ng-show="already_exist">*Nickname is already used, please choose another one </div>

                        {#*** COUNTRY#}
                        <div class="form-element form-input">
                            <div class="country_cont" style="cursor: pointer">

