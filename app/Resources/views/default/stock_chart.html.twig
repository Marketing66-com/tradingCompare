{% extends 'test.html.twig' %}


 {% block description %}
     <title>Bank of America Corp {{ currency}}  real-time Quote and sentiment</title>
     <meta name="description" content="Latest Bank of America Corp {{ currency}} share price with interactive charts, social sentiment, social comment, historical prices, comparative analysis, forecasts, business profile and more.">
 {% endblock %}

{% block body %}
    <div class="my-container">

        <section class="table">

            <div class="chart_search">
                <div class="container">
                    <div class="row">
                        <input class="search_input" type="text" placeholder="Search Instruments">
                    </div>
                </div>
            </div>
            <div class="container padding_non">
                <div class="row">
                    <div class="col-md-8 col-sm-12 col-xs-12">
                        <div class="chart_bitcoin-cont">
                            <div class="bitcoin_text-cont">
                                <div class="bitcoin_img-cont">
                                    <img class="bitcoin_img" src='{{asset("img/bitcoin.png")}}' alt="bitcoin">
                                </div>
                                <div class="bitcoin_text-cont_left">
                                    <h3 class="bitcoin_title">{{ currency}}<span class="bitcoin_title_right">{{ currency }}</span><span class="bitcoin_title_right-start"><i class="fas fa-star"></i></span></h3>
                                    <p class="statistics_block_green-text">+0.45% <span class="statistics_block_min-text">36.4</span>
                                        <span class="bitcoin_green-text_icon"><i class="fas fa-share"></i></span></p>
                                    <h3 class="bitcoin_many bitcoin_many-mobile">$10,174.42</h3>
                                    <p class="bitcoin_bottom-text">
                                        High: <span class="bitcoin_bottom-text_bold">$7.49K</span> Low:<span class="bitcoin_bottom-text_bold">$7.16K</span>
                                        Open: <span class="bitcoin_bottom-text_bold">$7.23K</span> Close: <span class="bitcoin_bottom-text_bold">$7.24K</span>
                                        Market Cap: <span class="bitcoin_bottom-text_bold">$129.13K</span>
                                    </p>
                                </div>
                                <div class="bitcoin_text-cont_right">
                                    <h3 class="bitcoin_many xs-none">$10,174.42</h3>
                                    <a class="btcoin_btn">TRADE NOW</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-5 col-xs-12 ">
                        <div class="chart_bitcoin-reting">
                            <p class="chart_bitcoin-reting_like-text"><span class="chart_bitcoin-reting_icon"><i class="fas fa-thumbs-up"></i></span> 12</p>
                            <p class="chart_bitcoin-reting_like-text"><span class="chart_bitcoin-reting_icon"><i class="fas fa-thumbs-down"></i></span> 54</p>
                            <p class="chart_bitcoin-reting_prozent">Sentiment: 86% Buying</p>
                            <div class="chart_bitcoin-reting_progress-bar">
                                <div class="reting_progress-bar_click"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-sm-7 col-xs-12 xs-none">
                        <div class="chart_content-text">
                            <p class="chart_content-text_info">{{ currency}}
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container">
                <div class="row">
                    <div class="general-chart">
                        <img class="general-chart_img" src='{{asset("img/chart.png")}}' alt="chart">
                    </div>
                </div>
            </div>


        </section>




    </div>
{% endblock %}

