<div id="dvFirst" class="ng-cloak">
    <div ng-controller="FirstController">

        <div ng-init="init('{{ api_forex }}', '{{ api_crypto }}','{{ api_stock }}', '{{ first }}', '{{ second }}', '{{ third }}', '{{ fourth }}',
        '{{ forex_from1 }}' , '{{ forex_to1 }}' , '{{ forex_from2 }}' , '{{ forex_to2 }}' , '{{ stock1 }}', '{{ stock2 }}')" ></div>
        <div class="statistics">
            <div class="container">
                <div class="row">
                    <div class="statistics_block" >
                    <p class="statistics_block_top-text">{[{crypto1.pair.slice(0, 3)}]}/{[{crypto1.pair.slice(3, 6)}]} <span class="statistics_block_number" ng-class="{'negative': crypto1.variation == 'down', 'positive':crypto1.variation == 'up', 'barneutral': crypto1.variation == 'none'}"> {[{crypto1.price}]}</span></p>
                    <p class="statistics_block_green-text" ng-class="{'negative': crypto1.change24 < 0, 'positive': crypto1.change24 >= 0}">{[{crypto1.change24}]}% <span class="statistics_block_min-text">{[{crypto1.point}]}</span></p>
                    </div>

                    <div class="statistics_block" >
                    <p class="statistics_block_top-text">{[{crypto2.pair.slice(0, 3)}]}/{[{crypto2.pair.slice(3, 6)}]} <span class="statistics_block_number"  ng-class="{'negative': crypto2.variation == 'down', 'positive':crypto2.variation == 'up', 'barneutral': crypto2.variation == 'none'}"> {[{crypto2.price}]}</span></p>
                    <p class="statistics_block_green-text" ng-class="{'negative': crypto2.change24 < 0, 'positive': crypto2.change24 >= 0}">{[{crypto2.change24}]}% <span class="statistics_block_min-text">{[{crypto2.point}]}</span></p>
                    </div>

                    <div class="statistics_block xs-none" >
                    <p class="statistics_block_top-text">{[{crypto3.fromSymbol}]}/{[{crypto3.toSymbol}]} <span class="statistics_block_number" ng-class="{'negative': crypto3.variation == 'down', 'positive':crypto3.variation == 'up', 'barneutral': crypto3.variation == 'none'}"> {[{crypto3.price}]}</span></p>
                    <p class="statistics_block_green-text" ng-class="{'negative': crypto3.change24 < 0, 'positive': crypto3.change24 >= 0}">{[{crypto3.change24}]}% <span class="statistics_block_min-text">{[{crypto3.point}]}</span></p>
                    </div>

                    <div class="statistics_block xs-none sx-border-non" >
                    <p class="statistics_block_top-text">{[{crypto4.fromSymbol}]}/{[{crypto4.toSymbol}]} <span class="statistics_block_number" ng-class="{'negative': crypto4.variation == 'down', 'positive':crypto4.variation == 'up', 'barneutral': crypto4.variation == 'none'}"> {[{crypto4.price}]}</span></p>
                    <p class="statistics_block_green-text" ng-class="{'negative': crypto4.change24 < 0, 'positive': crypto4.change24 >= 0}">{[{crypto4.change24}]}% <span class="statistics_block_min-text">{[{crypto4.point}]}</span></p>
                    </div>

                    <div class="statistics_block ms-none" >
                    <p class="statistics_block_top-text">{[{crypto5.name}]} <span class="statistics_block_number" ng-class="{'negative': crypto5.variation == 'down', 'positive':crypto5.variation == 'up', 'barneutral': crypto5.variation == 'none'}"> {[{crypto5.price}]}</span></p>
                    <p class="statistics_block_green-text" ng-class="{'negative': crypto5.change24 < 0, 'positive': crypto5.change24 >= 0}">{[{crypto5.change}]}% <span class="statistics_block_min-text">{[{crypto5.point}]}</span></p>
                    </div>

                    <div class="statistics_block border-none ms-none" >
                    <p class="statistics_block_top-text">{[{crypto6.name}]} <span class="statistics_block_number" ng-class="{'negative': crypto6.variation == 'down', 'positive':crypto6.variation == 'up', 'barneutral': crypto6.variation == 'none'}"> {[{crypto6.price}]}</span></p>
                    <p class="statistics_block_green-text" ng-class="{'negative': crypto6.change24 < 0, 'positive': crypto6.change24 >= 0}">{[{crypto6.change}]}% <span class="statistics_block_min-text">{[{crypto6.point}]}</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="{{ asset('js/bar.js') }}"></script>
